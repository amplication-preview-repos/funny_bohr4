datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Workout {
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  duration    Int?
  id          String    @id @default(cuid())
  name        String?
  updatedAt   DateTime  @updatedAt
}

model Nutrition {
  calories      Int?
  carbohydrates Int?
  createdAt     DateTime @default(now())
  description   String?
  fats          Int?
  id            String   @id @default(cuid())
  name          String?
  proteins      Int?
  updatedAt     DateTime @updatedAt
}

model Exercise {
  createdAt   DateTime @default(now())
  description String?
  duration    Int?
  id          String   @id @default(cuid())
  name        String?
  typeField   String?
  updatedAt   DateTime @updatedAt
}
